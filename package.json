{
  "name": "ui-box",
  "version": "1.4.0",
  "description": "Blazing Fast React UI Primitive",
  "contributors": [
    "Jeroen Ransijn (https://twitter.com/jeroen_ransijn)",
    "Roland Warmerdam (https://roland.codes)"
  ],
  "keywords": [
    "react"
  ],
  "repository": "segmentio/ui-box",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types/*.d.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "yarn lint && yarn test-typedefs && nyc ava",
    "lint": "eslint --ignore-path .gitignore '**/*.js'",
    "test-typedefs": "dtslint types",
    "prepublishOnly": "yarn clean && yarn build",
    "dev": "start-storybook -p 9009",
    "clean": "rm -rf lib",
    "build": "babel --out-dir lib src --source-maps inline",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np --no-publish",
    "benchmark": "echo ui-box && react-benchmark tools/benchmarks/box.js && echo glamor/jsxstyle && react-benchmark tools/benchmarks/glamor-jsxstyle.js",
    "size": "size-limit",
    "coverage": "nyc report --reporter=html"
  },
  "dependencies": {
    "@emotion/hash": "^0.7.1",
    "@types/react": "^16.8.15",
    "csstype": "^2.6.4",
    "glamor": "^2.20.0",
    "inline-style-prefixer": "^5.0.4",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@storybook/react": "^5.0.1",
    "@storybook/storybook-deployer": "^2.8.1",
    "ava": "^1.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "dtslint": "^0.7.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.17.0",
    "react": "^16.8.4",
    "react-benchmark": "^2.1.0",
    "react-dom": "^16.8.4",
    "react-test-renderer": "^16.8.4",
    "sinon": "^7.2.7",
    "size-limit": "^0.21.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --ignore-path .gitignore --fix '**/*.js'",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "19 KB"
    }
  ],
  "ava": {
    "require": [
      "@babel/register",
      "./test/_setup"
    ]
  }
}
